
<view class="weui-cells weui-cells_form">

    <form bindsubmit="formSubmit" bindreset="formReset">
   	<view class="section">
         <view class="section_title">自我描述</view>
        <view class="section_input">
          <textarea name="introduce" class="weui-input write-input" auto-focus placeholder=" 输入" value="{{userInfo.introduce}}"/>
        </view>
   	</view>

   	<view class="section">

        <view class="section_title">要求</view>

        <view class="section_input">
            <textarea name="require" class="weui-input write-input" placeholder=" 输入" value="{{userInfo.require}}"/>
        </view>
   	</view>

       <view class="weui-cells">
          <view class="weui-cell">
            <view class="weui-cell__bd">
              <view class="weui-uploader">
                <view class="weui-uploader__hd">
               
                </view>
                <view class="weui-uploader__bd">
                  <view class="weui-uploader__files">
                    <block wx:for="{{imageList}}" wx:for-item="image">
                      <view class="weui-uploader__file">
                        <image class="weui-uploader__img" src="{{image}}" data-src="{{image}}" bindtap="previewImage"></image>
                      </view>
                    </block>
                  </view>
                  <view class="weui-uploader__input-box">
                    <view class="weui-uploader__input" bindtap="chooseImage"></view>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>

      <button type="primary" form-type="submit">提交</button>
</form>

</view>

